#include <stdio.h>

int main() {
    int n;
    scanf("%d", &n);

    int arr[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    int maxEnding = arr[0];
    int maxSoFar   = arr[0];

    for (int i = 1; i < n; i++) {
        // Compare choosing new subarray vs extending current one
        if (maxEnding + arr[i] > arr[i])
            maxEnding = maxEnding + arr[i];
        else
            maxEnding = arr[i];

        // Update global maximum
        if (maxEnding > maxSoFar)
            maxSoFar = maxEnding;
    }

    printf("%d", maxSoFar);

    return 0;
}
